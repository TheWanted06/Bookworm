      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookworm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid>
        <Label Content="Welcome" HorizontalAlignment="Center" Margin="0,115,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Label Content="Please enter your name" HorizontalAlignment="Center" Margin="0,186,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="BtnSignIn" Content="Sign-In" HorizontalAlignment="Center" Margin="0,262,0,0" VerticalAlignment="Top" Click="BtnSignIn_Click"/>
